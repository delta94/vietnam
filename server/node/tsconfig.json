{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    "sourceMap": false,
    "declaration": true,
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2017",
    "removeComments": true,
    "incremental": true,
    "allowJs": true,
    "noEmit": false,
    "pretty": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "paths": {
      "@clients/*": ["src/clients/*"],
      "@global/*": ["src/global/*"],
      "@libs/*": ["src/libs/*"],
      "@models/*": ["src/models/*"],
      "@routes/*": ["src/routes/*"],
      "@services/*": ["src/services/*"]
    }
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": ["node_modules", "dist", "src/scripts"]
}
